<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/solid_white">

    <TextView
        android:id="@+id/tv_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/solid_black"
        android:textSize="@dimen/winner_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_createNewGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_new_game_button_text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/or_placeholder"
            android:textAlignment="center"
            android:textColor="@color/solid_black"
            android:textSize="@dimen/divider_text_text_size" />

        <Button
            android:id="@+id/btn_openLeaderBoards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/visit_leaderboards_button_text" />

    </LinearLayout>

</FrameLayout>